{
   "name": "user-microservice",
   "version": "0.0.1",
   "author": "Manasseh Omachonu <manaraph225@gmail.com>",
   "description": "User registration, authentication and authorization microservice.",
   "devDependencies": {
      "@types/express": "^4.17.9",
      "@types/node": "^8.0.29",
      "dotenv": "^8.2.0",
      "husky": "^4.3.0",
      "prettier": "^2.1.2",
      "ts-node": "3.3.0",
      "ts-node-dev": "^1.0.0",
      "tslint": "^6.1.3",
      "tslint-config-airbnb": "^5.11.2",
      "tslint-config-prettier": "^1.18.0",
      "typescript": "3.3.3333"
   },
   "dependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/body-parser": "^1.19.0",
      "@types/cors": "^2.8.8",
      "@types/dotenv": "^8.2.0",
      "@types/helmet": "^4.0.0",
      "@types/jsonwebtoken": "^8.5.0",
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.18.1",
      "class-validator": "^0.12.2",
      "cors": "^2.8.5",
      "express": "^4.15.4",
      "helmet": "^4.2.0",
      "jsonwebtoken": "^8.5.1",
      "mysql": "^2.14.1",
      "reflect-metadata": "^0.1.10",
      "typeorm": "0.2.29"
   },
   "scripts": {
      "build": "tsc",
      "start": "NODE_ENV=production node ./build/index.js",
      "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
      "start:prev": "ts-node src/index.ts",
      "tsc": "tsc",
      "start:debug": "set debug=* && ts-node-dev --respawn --transpileOnly src/index.ts",
      "prod": "tsc && node ./build/app.js",
      "migration:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
      "tslint:init": "tslint --init",
      "tslint": "tslint --project tsconfig.json",
      "tslint:fix": "tslint --fix --project tsconfig.json",
      "prettier:base": "prettier --parser typescript --single-quote",
      "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
      "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\""
   },
   "husky": {
      "hooks": {
        "pre-commit": "npm run prettier:write",
        "pre-push": "npm run tslint"
      }
   }
}
